{% import "github.com/pb-go/pb-go/config" %}

{% func ServStatus() %}
    Server Status: Running
    Server Configuration:
        CAPTCHA REQUIRED: {%v config.ServConf.Recaptcha.Enable %}
        DEFAULT (AND MAX) EXPIRE HRS: {%d config.ServConf.Content.ExpireHrs %}
        UPLOAD FILE ABUSE CHECK: {%v config.ServConf.Content.DetectAbuse %}
        ALLOW BASE64 ENCODED DATA: {%v config.ServConf.Content.AllowBase64encode %}
{% endfunc %}